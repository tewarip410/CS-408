<style>
  .d-flex {
    align-items: center;
  }
</style>
<div class="container">
  <% if (user._id === tripUser._id) { %>
    <h3 class="mt-3">Your trips</h3>
  <% } else { %>
    <h3><%=user.name%>'s trips</h3>
  <% } %>
  <% trips.forEach(trip => { %>
    <div class="card mt-3">
      <div class="card-header">
        <h4 class="d-flex">
          <%=trip.name%>
          <form class="ml-auto" action="/trips/<%=trip._id%>?_method=delete" method="post">
            <button type="submit" class="btn danger-color-dark btn-sm"><i class="fa fa-trash mr-1"></i></button>
          </form>
        </h4>

      </div>
      <div class="card-body">
        <p>Link: <a href="/trips/<%=trip._id%>">http://localhost:8081/trips/<%=trip._id%></a></p>
      </div>
    </div>
  <% }) %>
</div>