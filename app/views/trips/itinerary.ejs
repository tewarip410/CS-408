<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" 
integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

<div class="card">
    <h5 class="card-header">Travel Itinerary</h5>
    <div class="card-body">
      <h5 class="card-title">Flights</h5>
      <% for (var i = 0; i < flights.length; i++) { %>
        <p class="card-text">Departure: <%= flights[i].departure %> from <%= flights[i].origin %></p>
        <p class="card-text">Arrival: <%= flights[i].arrival %> at <%= flights[i].dest %></p>
        <p class="card-text">Airline: <%= flights[i].airline %></p>
        <p class="card-text">Flight Number: <%= flights[i].flight_number %></p>
        <p class="card-text">Seat: <%= flights[i].travel_class %></p>
        <p class="card-text">Total Ticket Cost: <%= flight_prices[i] %></p>
      <% } %>
      <h5 class="card-title">Hotels</h5>
      <% for (var i = 0; i < hotels.length; i++) { %>
        <p class="card-text">Hotel: <%= hotels[i].name %></p>
        <p class="card-text">Address: <%= hotels[i].addr %></p>
        <p class="card-text">Total Cost: <%= hotel_prices[i] %></p>
      <% } %>
      <a href="/trips/create/details" class="fas fa-arrow-left fa-2x"></a>
      <a href="#" class="btn btn-primary">Save Itinerary!</a>
    </div>
</div>