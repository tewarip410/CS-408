<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">  
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <title>Step 2</title>
  </head>
  <body>
    <header>
        <% include ../partials/header %>
    </header>
    <% if (data) { %>
        <form action="planTravel" method="post" id="travel_form">
            <label for="datepicker">Enter a start date</label>
            <input name="date" id="datepicker" width="276" />
            <% var i = 0; %>
            <% data.location_data.forEach(function(obj) { %>
                <div class="form-group">
                    <label><%- obj[0] %></label>
                    <input type="text" placeholder="Duration of stay" class="form-control" name="duration" id="<%- obj[0] %>-stay">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Order" class="form-control" name="order" id="<%- obj[0] %>-order">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios <%= i %>" value="plane" id="<%- obj[0] %>-r1">
                    <label class="form-check-label">
                        Plane
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios <%= i %>" value="train" id="<%- obj[0] %>-r2">
                    <label class="form-check-label">
                        Train
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios <%= i %>" value="car" id="<%- obj[0] %>-r3">
                    <label class="form-check-label">
                        Car
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios <%= i %>" value="none" id="<%- obj[0] %>-r4" checked>
                    <label class="form-check-label">
                        None
                    </label>
                </div>
                <% i++; %>
            <% }) %>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="rt" id="gridCheck">
                    <label class="form-check-label">
                    Round Trip?
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Plan my vacations!</button>
        </form>
    <% } %>
    
    <script>
        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap4'
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    </body>
</html>