<form class="container">
  <h3>Plan Vacation</h3>
  <%=markers%>
  <% var i = 0 %>
  <% for (var m in markers) { %>
    <%=m%>
    <% var marker = markers[m]; %>
    <%=marker%>
    <% i++; %>
    <div class="card">
      <div class="card-body">
          <h5 class="card-title"><%=marker.title%></h5>
          <input type="text" class="form-control" placeholder="duration of stay">
          <input class="form-check-input" type="radio" name="location_<%=i%>" id="location_<%=i%>_plane" value="plane">
          <label class="form-check-label" for="location_<%=i%>_plane">Plane</label>
          <input class="form-check-input" type="radio" name="location_<%=i%>_car" value="car">
          <label class="form-check-label" for="location_<%=i%>_car">Car</label>
          <input class="form-check-input" type="radio" name="location_<%=i%>_train" value="train">
          <label class="form-check-label" for="location_<%=i%>_train">Train</label>
      </div>
    </div>
  <% } %>
        
  </form>